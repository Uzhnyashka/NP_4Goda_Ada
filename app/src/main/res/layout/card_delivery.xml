<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:background="@drawable/icon_bg_selector"
    android:id="@+id/card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_delivery_id"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:text="123123124123123"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_send_date"
        android:text="15.05.2017"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_delivery_id"
        android:textColor="@color/app_hint_text_color"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sender_location"
        android:textSize="16sp"
        android:text="Uzhgorod"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_below="@+id/tv_send_date"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recipient_date"
        android:text="17.05.2017"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_delivery_id"
        android:textColor="@color/app_hint_text_color"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_recipient_location"
        android:textSize="16sp"
        android:text="Kremenchuk"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_below="@+id/tv_send_date"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:layout_below="@+id/tv_recipient_location"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_centerHorizontal="true"
        android:text="Sent"
        android:textColor="@color/colorStatusSelected"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        android:layout_below="@+id/tv_status"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="$10.00"
        android:textColor="@android:color/black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toEndOf="@+id/tv_sender_location"
        android:layout_toStartOf="@+id/tv_recipient_location"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_below="@+id/tv_sender_location"
        android:background="@color/colorLoginButton"
        />

</RelativeLayout>